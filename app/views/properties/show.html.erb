<p id="notice"><%= notice %></p>
<p>
  <strong>物件名</strong>
  <%= @property.property_name %>
</p>
<p>
  <strong>賃料</strong>
  <%= @property.rent %>
</p>
<p>
  <strong>住所</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数</strong>
  <%= @property.age %>
</p>
<p>
  <strong>備考</strong>
  <%= @property.remarks %>
</p>
<% @stations.each do |station| %>
  <h3>最寄駅<%= @property.nearest_stations.any? && (@size+=1) %></h3>
  <p>
    <strong>路線名</strong>
    <%= station.route_name %>
  </p>
  <p>
    <strong>駅名</strong>
    <%= station.station_name %>
  </p>
  <p>
    <strong>徒歩分数</strong>
    <%= station.minute_walk %>
  </p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %>|
<%= link_to '戻る', properties_path %>
